<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editing" >

    <Spinner
        android:id="@+id/background_music"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginTop="128dp"
        android:entries="@array/background_musics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/effect_spinner1"
        android:layout_width="338dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:entries="@array/overlap1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_music" />

    <Spinner
        android:id="@+id/effect_spinner2"
        android:layout_width="340dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:entries="@array/overlap2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overlap_time1" />

    <Spinner
        android:id="@+id/effect_spinner3"
        android:layout_width="339dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:entries="@array/overlap3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overlap_time2" />

    <SeekBar
        android:id="@+id/overlap_time1"
        android:layout_width="305dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effect_spinner1" />

    <SeekBar
        android:id="@+id/overlap_time2"
        android:layout_width="305dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effect_spinner2" />

    <SeekBar
        android:id="@+id/overlap_time3"
        android:layout_width="310dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effect_spinner3" />

    <Button
        android:id="@+id/toPlay"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginTop="88dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overlap_time3" />
</androidx.constraintlayout.widget.ConstraintLayout>